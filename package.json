{
  "name": "react-sample-app-2023",
  "version": "1.0.0",
  "description": "React sample application to help bootstrap new React projects in a simple and fast way.",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "prettier-format-all": "prettier --write **/*.{json,ts,tsx}",
    "lint": "eslint src/**/*.{ts,tsx} tests/**/*.{ts,tsx}",
    "lint:fix": "eslint --fix src/**/*.{ts,tsx} tests/**/*.{ts,tsx}",
    "lint:css": "stylelint **/*.{css,sass,scss}",
    "lint:css:fix": "stylelint --fix **/*.{css,sass,scss}",
    "test": "cross-env NODE_ENV=test jest tests/unit",
    "test:watch": "cross-env NODE_ENV=test jest tests/unit --watch",
    "test:coverage": "cross-env NODE_ENV=test jest tests/unit --coverage",
    "adr:add": "npx log4brains adr new",
    "adr:serve": "npx log4brains preview",
    "pre-commit": "npm run lint:fix && npm run lint:css:fix && npm run test:coverage",
    "prepare": "husky"
  },
  "author": "Andr√© Rosa (andreros@gmail.com)",
  "license": "UNLICENSED",
  "devDependencies": {
    "@statoscope/webpack-plugin": "^5.28.0",
